{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "loader",
  "version": "0.1.0",
  "identifier": "xyz.asthmaphobia.loader",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Asthmaphobia - Loader",
        "width": 800,
        "height": 600,
        "resizable": false,
        "maximizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/favicon.svg", "icons/favicon.ico"]
  }
}

---
interface Props {
  title: string;
  date: Date;
  content: string[];
  category: string;
  version?: string;
}

const { title, date, content, category, version } = Astro.props;
---

<article class={`news-item news-item-${category} animate-fade-in`}>
  <div class="news-header">
    <div class="news-meta">
      <span class={`category-badge ${category}`}>{category}</span>
      {version && <span class="version-badge">v{version}</span>}
      <time class="date" datetime={date.toISOString()}>
        {
          new Date(date).toLocaleDateString(undefined, {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </time>
    </div>
    <h2 class="news-title">{title}</h2>
  </div>
  <div class="news-content">
    {
      content.map((paragraph) => (
        <p set:html={paragraph.replace(/â€¢/g, "&bull;")} />
      ))
    }
  </div>
</article>

<style>
  .news-item {
    background: rgba(0, 0, 0, 0.5);
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-md);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(139, 92, 246, 0.1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(12px);
  }

  .news-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(139, 92, 246, 0.15);
    border-color: rgba(139, 92, 246, 0.2);
  }

  .news-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    transition: all 0.3s ease;
  }

  .news-header {
    margin-bottom: 1.75rem;
  }

  .news-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .category-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 1rem;
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.2s ease;
  }

  .category-badge.update {
    background-color: rgba(139, 92, 246, 0.1);
    color: var(--primary-color);
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .category-badge.announcement {
    background-color: rgba(139, 92, 246, 0.1);
    color: var(--primary-color);
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .category-badge.warning {
    background-color: rgba(239, 68, 68, 0.1);
    color: var(--error-color);
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  .version-badge {
    background-color: rgba(139, 92, 246, 0.1);
    color: var(--primary-color);
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid rgba(139, 92, 246, 0.2);
    transition: all 0.2s ease;
  }

  .version-badge:hover {
    background-color: rgba(139, 92, 246, 0.2);
  }

  .date {
    font-size: 0.875rem;
    color: var(--text-color);
    opacity: 0.7;
    margin-left: auto;
  }

  .news-title {
    font-size: 1.75rem;
    margin: 0;
    font-weight: 700;
    line-height: 1.3;
    color: var(--heading-color);
    letter-spacing: -0.025em;
  }

  .news-content {
    color: var(--text-color);
    line-height: 1.7;
    opacity: 0.9;
  }

  .news-content p {
    margin-bottom: 1.25rem;
  }

  .news-content p:last-child {
    margin-bottom: 0;
  }

  /* Color-coding for different news types */
  .news-item-update::before {
    background: linear-gradient(
      to bottom,
      var(--primary-color),
      var(--accent-color)
    );
  }

  .news-item-announcement::before {
    background: linear-gradient(
      to bottom,
      var(--primary-color),
      var(--accent-color)
    );
  }

  .news-item-warning::before {
    background: linear-gradient(to bottom, var(--error-color), #f87171);
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .news-item {
      padding: 1.5rem;
    }

    .news-title {
      font-size: 1.5rem;
    }

    .news-meta {
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }

    .date {
      margin-left: 0;
      width: 100%;
      order: 3;
      margin-top: 0.25rem;
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    .news-item {
      padding: 1.25rem;
    }

    .news-title {
      font-size: 1.25rem;
    }

    .category-badge,
    .version-badge {
      padding: 0.25rem 0.75rem;
      font-size: 0.7rem;
    }
  }
</style>

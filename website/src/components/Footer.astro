---
import { appInfo } from "../config/appInfo";
import SignalIcon from "../assets/signal.svg";
import GitHubIcon from "../assets/github.svg";
import { Image } from "astro:assets";
---

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h2 class="text-gradient">Asthmaphobia</h2>
        <p>
          The ultimate Phasmophobia cheat tool that gives you an edge in the
          game.
        </p>
        <div class="social-links">
          <a
            href={appInfo.socialLinks.signal}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
            aria-label="Join our Signal group"
          >
            <Image src={SignalIcon} alt="Signal" width={20} height={20} />
          </a>
          <a
            href={appInfo.socialLinks.github}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
            aria-label="Visit our GitHub"
          >
            <Image src={GitHubIcon} alt="GitHub" width={20} height={20} />
          </a>
        </div>
      </div>

      <div class="footer-section">
        <h3>Quick Links</h3>
        <ul class="footer-links">
          <li><a href="/features">Features</a></li>
          <li><a href={appInfo.downloadUrl}>Download</a></li>
          <li><a href="/news">News</a></li>
          <li><a href="/faq">FAQ</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {appInfo.copyrightYear} Asthmaphobia. All rights reserved.</p>
      <p>Not affiliated with Phasmophobia or Kinetic Games.</p>
      <p class="made-with-love">
        Made with love by <a
          href="https://sipacid.com"
          target="_blank"
          rel="noopener noreferrer">Eve</a>
      </p>
    </div>
  </div>
</footer>

<style>
  footer {
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(12px);
    border-top: 1px solid rgba(139, 92, 246, 0.1);
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .footer-section h3 {
    color: var(--heading-color);
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .footer-section p {
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: rgba(139, 92, 246, 0.1);
    color: var(--primary-color);
    transition: all 0.2s ease;
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .social-link:hover {
    background: rgba(139, 92, 246, 0.2);
    transform: translateY(-2px);
    color: var(--accent-color);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .social-link img {
    width: 20px;
    height: 20px;
    filter: brightness(0) saturate(100%) invert(100%);
    transition: all 0.2s ease;
  }

  .social-link:hover img {
    filter: brightness(0) saturate(100%) invert(56%) sepia(22%) saturate(1234%)
      hue-rotate(242deg) brightness(92%) contrast(85%);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.2s ease;
    opacity: 0.8;
  }

  .footer-links a:hover {
    color: var(--primary-color);
    opacity: 1;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(139, 92, 246, 0.1);
    text-align: center;
    color: var(--text-color);
    opacity: 0.7;
    font-size: 0.875rem;
  }

  .footer-bottom a {
    color: var(--primary-color);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .footer-bottom a:hover {
    color: var(--accent-color);
  }

  .made-with-love {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .made-with-love a {
    color: var(--primary-color);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .made-with-love a:hover {
    color: var(--accent-color);
  }

  @keyframes heartbeat {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    footer {
      padding: 3rem 0 1.5rem;
      margin-top: 3rem;
    }

    .footer-content {
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .footer-section h2 {
      font-size: 1.5rem;
    }

    .footer-section h3 {
      font-size: 1.125rem;
      margin-bottom: 1rem;
    }

    .social-links {
      gap: 0.75rem;
    }

    .social-link {
      width: 36px;
      height: 36px;
    }
  }
</style>

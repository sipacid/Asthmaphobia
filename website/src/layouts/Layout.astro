---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Asthmaphobia - The Ultimate Phasmophobia Cheat Tool",
  description = "Download the best free Phasmophobia cheat tool. Asthmaphobia gives you an edge with ESP, item spawning, ghost detection and more features.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- RSS Auto Discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Asthmaphobia - The Ultimate phasmophobia Cheat Tool"
      href={new URL("rss.xml", Astro.site)}
    />

    <!-- Umami -->
    <script
      defer
      is:inline
      src="https://umami.girl.lgbt/script.js"
      data-website-id="cb9b9a26-9167-4e68-a88e-d98f8d8a55c3"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #8b5cf6;
    --primary-hover: #7c3aed;
    --bg-color: #000000;
    --secondary-bg: #0a0a0a;
    --text-color: #e2e8f0;
    --heading-color: #f8fafc;
    --border-color: #1a1a1a;
    --accent-color: #a78bfa;
    --success-color: #10b981;
    --error-color: #ef4444;
    --card-bg: rgba(10, 10, 10, 0.7);
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
  }

  html {
    font-family: "Inter", system-ui, sans-serif;
    background-color: var(--bg-color);
    color: var(--text-color);
    scroll-behavior: smooth;
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
    overflow-x: hidden;
    background: linear-gradient(
      to bottom,
      var(--bg-color),
      var(--secondary-bg)
    );
  }

  main {
    flex: 1;
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--heading-color);
    margin-top: 0;
    line-height: 1.2;
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  h1 {
    font-size: 3rem;
  }
  h2 {
    font-size: 2.25rem;
  }
  h3 {
    font-size: 1.875rem;
  }
  h4 {
    font-size: 1.5rem;
  }
  h5 {
    font-size: 1.25rem;
  }
  h6 {
    font-size: 1rem;
  }

  a {
    color: var(--accent-color);
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
  }

  a:hover {
    color: var(--primary-color);
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
  }

  button,
  .btn {
    background-color: var(--primary-color);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    box-shadow: var(--shadow-sm);
  }

  button:hover,
  .btn:hover {
    background-color: var(--primary-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .card {
    background: var(--card-bg);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow-lg);
    backdrop-filter: blur(12px);
    border: 1px solid var(--border-color);
  }

  /* Modern form styles */
  input,
  select,
  textarea {
    background-color: var(--secondary-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: 0.75rem 1rem;
    color: var(--text-color);
    font-size: 1rem;
    transition: all 0.2s ease;
    width: 100%;
  }

  input:focus,
  select:focus,
  textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
  }

  /* Mobile-friendly styles */
  @media (max-width: 768px) {
    html {
      font-size: 14px;
    }

    main {
      padding: 1rem;
    }

    h1 {
      font-size: 2.5rem;
    }
    h2 {
      font-size: 2rem;
    }
    h3 {
      font-size: 1.5rem;
    }
    h4 {
      font-size: 1.25rem;
    }

    button,
    .btn {
      padding: 0.875rem 1.25rem;
      width: 100%;
    }
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease forwards;
  }

  /* Utility classes */
  .text-gradient {
    background: linear-gradient(
      to right,
      var(--primary-color),
      var(--accent-color)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .glass-effect {
    background: rgba(30, 41, 59, 0.7);
    backdrop-filter: blur(12px);
    border: 1px solid var(--border-color);
  }
</style>

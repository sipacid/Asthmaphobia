---
import Layout from "../layouts/Layout.astro";
import { appInfo } from "../config/appInfo";
import { Image } from "astro:assets";

// Import SVG icons
import downloadIcon from "../assets/download-icon.svg";
import starIcon from "../assets/star-icon.svg";
import eyeIcon from "../assets/eye-icon.svg";
import ghostIcon from "../assets/ghost-icon.svg";
import infoIcon from "../assets/info-icon.svg";
---

<Layout>
  <section class="hero">
    <div class="hero-content">
      <span class="badge">v{appInfo.version}</span>
      <h1>Welcome to <span class="accent">Asthmaphobia</span></h1>
      <p class="subtitle">The Ultimate Cheat Tool for Phasmophobia</p>
      <div class="cta-buttons">
        <a
          href={appInfo.downloadUrl}
          class="btn primary"
          data-umami-event="Download"
        >
          <span class="icon">
            <Image src={downloadIcon} alt="Download" width={20} height={20} />
          </span>
          Download Now
        </a>
        <a href="/features" class="btn secondary">
          <span class="icon">
            <Image src={starIcon} alt="Features" width={20} height={20} />
          </span>
          View Features
        </a>
      </div>
    </div>
    <div class="hero-image">
      <div class="floating-card card1">Ghost Detection</div>
      <div class="floating-card card2">Wallhacks</div>
      <div class="floating-card card3">AntiKick</div>
    </div>
  </section>

  <section class="features">
    <h2><span class="highlight">Cheat</span> Features</h2>
    <div class="feature-grid">
      <div class="feature-card">
        <div class="feature-icon">
          <Image src={eyeIcon} alt="ESP & Wallhacks" width={28} height={28} />
        </div>
        <h3>ESP & Wallhacks</h3>
        <p>
          See ghosts, items, and other players through walls. Never be caught
          off guard with our advanced ESP system that reveals everything in the
          game world.
        </p>
        <div class="card-shine"></div>
      </div>
      <div class="feature-card">
        <div class="feature-icon">
          <Image src={ghostIcon} alt="Ghost Detection" width={28} height={28} />
        </div>
        <h3>Ghost Detection</h3>
        <p>
          Instantly identify ghost types without evidence. Know what you're
          dealing with from the start and skip the investigation process
          entirely.
        </p>
        <div class="card-shine"></div>
      </div>
      <div class="feature-card">
        <div class="feature-icon">
          <Image src={infoIcon} alt="Ghost Control" width={28} height={28} />
        </div>
        <h3>Ghost Control</h3>
        <p>
          Force ghosts to perform specific actions and change their behavior
          patterns. Make them hunt, interact with objects, or appear at your
          command.
        </p>
        <div class="card-shine"></div>
      </div>
    </div>
  </section>

  <section id="download" class="download-section">
    <h2>Download For Free</h2>
    <p>Get the latest version of Asthmaphobia cheat tool completely free.</p>

    <div class="download-container">
      <div class="version-info">
        <span class="version-tag">Latest Version: v{appInfo.version}</span>
        <span class="update-date"
          >Updated: {
            new Date(appInfo.latestUpdateDate).toLocaleDateString()
          }</span
        >
      </div>

      <a
        href={appInfo.downloadUrl}
        class="download-button"
        data-umami-event="Download"
      >
        <span class="download-icon">
          <Image src={downloadIcon} alt="Download" width={24} height={24} />
        </span>
        <span class="download-text">Download Asthmaphobia</span>
      </a>

      <p class="compatibility">
        Compatible with the latest version of Phasmophobia
      </p>

      <div class="instructions">
        <h3>How to Install:</h3>
        <ol>
          <li>Download the ZIP file</li>
          <li>Extract all files to any folder</li>
          <li>Run loader.exe as administrator</li>
          <li>Open Phasmophobia</li>
          <li>Press Inject in the loader</li>
        </ol>
      </div>
    </div>
  </section>

  <section class="disclaimer">
    <h3>Disclaimer</h3>
    <p>
      Asthmaphobia is for educational purposes only. Use at your own risk. We
      are not responsible for any bans or actions taken against your account.
      Always use cheats responsibly and preferably in private lobbies with
      friends who are aware you are using them.
      <br /><br />
      Â© {appInfo.copyrightYear} Asthmaphobia
    </p>
  </section>
</Layout>

<style>
  .hero {
    height: 90vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-align: left;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.98),
      rgba(10, 10, 10, 0.95)
    );
    margin: -2rem -2rem 0;
    padding: 0 10%;
    position: relative;
    overflow: hidden;
    width: 100vw;
    max-width: 100vw;
    box-sizing: border-box;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .hero::before {
    content: "";
    position: absolute;
    width: 50%;
    height: 50%;
    top: -15%;
    right: -15%;
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.1) 0%,
      rgba(139, 92, 246, 0) 70%
    );
    border-radius: 50%;
    z-index: 0;
  }

  .hero::after {
    content: "";
    position: absolute;
    width: 30%;
    height: 30%;
    bottom: -10%;
    left: 5%;
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.05) 0%,
      rgba(139, 92, 246, 0) 70%
    );
    border-radius: 50%;
    z-index: 0;
  }

  .hero-content {
    max-width: 600px;
    z-index: 1;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--heading-color);
    letter-spacing: -0.02em;
  }

  .hero-content .accent {
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--accent-color)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-content .subtitle {
    font-size: 1.25rem;
    color: var(--text-color);
    opacity: 0.9;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn .icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn .icon img {
    filter: brightness(0) invert(1); /* Makes SVGs white */
  }

  .btn.primary {
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--accent-color)
    );
    color: white;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.2);
  }

  .btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(139, 92, 246, 0.3);
  }

  .btn.secondary {
    background: rgba(139, 92, 246, 0.1);
    color: var(--primary-color);
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .btn.secondary .icon img {
    filter: brightness(0) saturate(100%) invert(40%) sepia(98%) saturate(427%)
      hue-rotate(234deg) brightness(97%) contrast(96%); /* Makes SVGs purple */
  }

  .btn.secondary:hover {
    background: rgba(139, 92, 246, 0.15);
    transform: translateY(-2px);
  }

  .hero-image {
    position: relative;
    width: 40%;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .floating-card {
    position: absolute;
    padding: 20px;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: 10px;
    color: white;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    font-weight: 500;
    animation: float 6s infinite ease-in-out;
  }

  .card1 {
    top: 20%;
    left: 0;
    animation-delay: 0s;
  }

  .card2 {
    top: 40%;
    right: 0;
    animation-delay: 1s;
  }

  .card3 {
    bottom: 15%;
    left: 20%;
    animation-delay: 2s;
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .badge {
    display: inline-block;
    background: rgba(155, 89, 182, 0.2);
    color: #b878df;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(155, 89, 182, 0.3);
    backdrop-filter: blur(5px);
  }

  .features {
    padding: 6rem 0;
    text-align: center;
  }

  .features h2 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--heading-color);
  }

  .highlight {
    color: var(--primary-color);
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 0 2rem;
  }

  .feature-card {
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(139, 92, 246, 0.1);
    border-radius: var(--radius-lg);
    padding: 2rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(12px);
  }

  .feature-card:hover {
    transform: translateY(-5px);
    border-color: rgba(139, 92, 246, 0.2);
    box-shadow: 0 8px 24px rgba(139, 92, 246, 0.15);
  }

  .feature-icon {
    width: 56px;
    height: 56px;
    background: rgba(139, 92, 246, 0.1);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .feature-icon img {
    filter: brightness(0) saturate(100%) invert(40%) sepia(98%) saturate(427%)
      hue-rotate(234deg) brightness(97%) contrast(96%); /* Makes SVGs purple */
  }

  .feature-card:hover .feature-icon {
    background: rgba(139, 92, 246, 0.15);
    border-color: rgba(139, 92, 246, 0.3);
  }

  .feature-card:hover .feature-icon img {
    filter: brightness(0) saturate(100%) invert(40%) sepia(98%) saturate(427%)
      hue-rotate(234deg) brightness(97%) contrast(96%) brightness(1.1); /* Slightly brighter on hover */
  }

  .feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--heading-color);
  }

  .feature-card p {
    color: var(--text-color);
    line-height: 1.6;
    opacity: 0.9;
  }

  .card-shine {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      transparent 0%,
      rgba(139, 92, 246, 0.05) 50%,
      transparent 100%
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .feature-card:hover .card-shine {
    transform: translateX(100%);
  }

  .download-section {
    padding: 6rem 2rem;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.95),
      rgba(10, 10, 10, 0.98)
    );
    margin: 0 -2rem;
  }

  .download-section h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--heading-color);
  }

  .download-section p {
    color: var(--text-color);
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .download-container {
    max-width: 800px;
    margin: 0 auto;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(139, 92, 246, 0.1);
    border-radius: var(--radius-lg);
    padding: 2rem;
    backdrop-filter: blur(12px);
  }

  .version-info {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .version-tag,
  .update-date {
    background: rgba(139, 92, 246, 0.1);
    color: var(--primary-color);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .download-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--primary-color);
    color: white;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-bottom: 2rem;
  }

  .download-button:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
  }

  .download-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .download-icon img {
    filter: brightness(0) invert(1); /* Makes SVGs white */
  }

  .compatibility {
    color: var(--text-color);
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  .instructions {
    text-align: left;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(139, 92, 246, 0.1);
    border-radius: var(--radius-md);
    padding: 1.5rem;
  }

  .instructions h3 {
    color: var(--heading-color);
    margin-bottom: 1rem;
  }

  .instructions ol {
    color: var(--text-color);
    opacity: 0.9;
    padding-left: 1.5rem;
  }

  .instructions li {
    margin-bottom: 0.5rem;
  }

  .disclaimer {
    padding: 4rem 2rem;
    text-align: center;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(139, 92, 246, 0.1);
    border-radius: var(--radius-lg);
    margin: 2rem;
  }

  .disclaimer h3 {
    color: var(--heading-color);
    margin-bottom: 1rem;
  }

  .disclaimer p {
    color: var(--text-color);
    opacity: 0.9;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      text-align: center;
      padding: 4rem 2rem;
    }

    .hero-content {
      margin-bottom: 2rem;
    }

    .hero-image {
      width: 100%;
      height: 300px;
    }

    .features {
      padding: 4rem 0;
    }

    .feature-grid {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }

    .download-section {
      padding: 4rem 1rem;
    }

    .version-info {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .hero h1 {
      font-size: 2rem;
    }

    .floating-card {
      padding: 15px;
      font-size: 0.9rem;
    }

    .features h2 {
      font-size: 2rem;
    }

    .feature-card h3 {
      font-size: 1.25rem;
    }
  }
</style>
